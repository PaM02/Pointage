<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Enregistrement">

    <TextView
        android:id="@+id/textViewE1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/colorhead"
        android:text="Enregistrement"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonValiderE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textViewE1"
        android:layout_marginTop="20dp"

        android:layout_weight="1"
        android:background="@drawable/custom_button"
        android:text="actualiser" />

    <TextView
        android:id="@+id/textViewE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonValiderE"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Cliquer sur l'un des éléments pour effectuer le changement d'état!" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewE"
        android:id="@+id/listEn"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent" />

</RelativeLayout>